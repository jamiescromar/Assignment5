@model Project
<div class="card card-outline-primary m-1 p-1">
    <!--This will make it so that we can click on the book title to see the collapsed informaiton-->
    <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">
        <h4>
            @Model.Title
        </h4>
    </a>
    <!--Made a collapsable pill so that all the information is not instantly clicked on but it can be seen if you click on one to open-->
    <div class="row">
        <div class="col">
            <!--MAke this collapsable so that you have to have the inforamtion appear by clicking on the book title-->
            <div class="collapse multi-collapse" id="multiCollapseExample1">
                <div class="card card-body">
                    <p>Author: @Model.AuthorFirst @Model.AuthorMiddle @Model.AuthorLast</p>
                    <p>Publisher: @Model.Publisher</p>
                    <p>ISBN: @Model.ISBN</p>
                    <p>Category: @Model.Category</p>
                    <p>Classification: @Model.Classification</p>
                    <p>Price: @Model.Price</p>
                    <p>Pages: @Model.Pages</p>
                </div>
            </div>
        </div>
    </div>
    <!--Need add in services in order to maintain the cashe so that you can add things to cart and retain that info-->
    <form id="@Model.BookID" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add to Cart
            </button>
        </span>
    </form>

</div>